{
    "name": "lrc-maker",
    "version": "5.1.8",
    "description": "歌词滚动姬｜可能是你所能见到的最好用的歌词制作工具",
    "repository": "https://github.com/magic-akari/lrc-maker.git",
    "author": "阿卡琳 <hufan.akarin@Gmail.com>",
    "license": "MIT",
    "keywords": [
        "lrc",
        "lrc maker",
        "lyric",
        "lyric maker"
    ],
    "bugs": "https://github.com/magic-akari/lrc-maker/issues",
    "homepage": "https://github.com/magic-akari/lrc-maker#readme",
    "files": [
        "src",
        "build"
    ],
    "scripts": {
        "clean": "rm -rf ./build/* ./build.es6/*",
        "prestart": "npm run metadata",
        "start": "npm run html && npm run esm:watch",
        "prebuild": "npm run metadata",
        "build": "npm run css && npm run nomodule && npm run esm && npm run html",
        "metadata": "ts-node -P scripts/tsconfig.json scripts/generate.metadata.ts | tee src/metadata.d.ts > worker/metadata.d.ts",
        "esm": "tsc -b",
        "preesm:watch": "npm run metadata",
        "esm:watch": "tsc -b -w",
        "es6": "tsc -b tsconfig.es6.json",
        "nomodule": "npm run es6 && webpack -p",
        "css": "postcss src/index.css -m -d build",
        "prehtml": "mkdir -p build && npm run assets",
        "html": "ts-node -P scripts/tsconfig.json scripts/index.html.tsx > build/index.html",
        "assets": "cp -r ./assets/* ./build",
        "prettier": "prettier --write \"{.,src/**,worker,scripts}/*.{ts,tsx,js,es6,css,json,md}\"",
        "listdiff": "prettier -l \"{.,src/**,worker,scripts}/*.{ts,tsx,js,es6,css,json,md}\"",
        "lint": "tslint \"{src,worker,scripts}/**/*.{ts,tsx,es6}\""
    },
    "dependencies": {
        "react": "^16.11.0",
        "react-dom": "^16.11.0"
    },
    "devDependencies": {
        "@lrc-maker/lrc-parser": "^0.1.6",
        "@types/node": "^12.12.7",
        "@types/prettier": "^1.18.3",
        "@types/react": "^16.9.11",
        "@types/react-dom": "^16.9.4",
        "autoprefixer": "^9.7.1",
        "core-js": "^3.4.0",
        "cssnano": "^4.1.10",
        "glob": "^7.1.6",
        "postcss": "^7.0.21",
        "postcss-cli": "^6.1.3",
        "postcss-custom-properties": "^9.0.2",
        "postcss-import": "^12.0.1",
        "prettier": "^1.19.0",
        "source-map-loader": "^0.2.4",
        "toggle-switch-css": "^1.0.1",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.1",
        "tslint-react": "^4.1.0",
        "typescript": "^3.7.2",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10"
    }
}
