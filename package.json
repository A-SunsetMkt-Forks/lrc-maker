{
    "name": "lrc-maker",
    "version": "3.4.2",
    "description": "歌词滚动姬｜可能是你所能见到的最好的歌词制作工具",
    "scripts": {
        "clean": "rm -rf ./build/*",
        "build": "webpack -p && npm run render && npm run style && npm run assets ",
        "style": "sass --style=compressed --load-path=node_modules/normalize.css ./src/scss/app.scss build/app.css",
        "assets": "cp -r ./resources/* build",
        "render": "node ./bin/render.js > ./build/index.html",
        "prettier": "prettier --write \"{.,src/**,languages/**,bin/**}/*.{js,jsx,scss,json}\""
    },
    "keywords": [
        "lrc",
        "lyric",
        "lyric maker"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/magic-akari/lrc-maker.git"
    },
    "author": "阿卡琳",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/magic-akari/lrc-maker/issues"
    },
    "homepage": "https://github.com/magic-akari/lrc-maker#readme",
    "dependencies": {
        "@lrc-maker/lrc-parser": "^0.1.5",
        "mobx": "^4.9.4",
        "normalize.css": "^8.0.1",
        "preact": "^8.4.2",
        "preact-mobx-observer": "^1.1.3",
        "seamless-scroll-polyfill": "^1.0.6"
    },
    "devDependencies": {
        "@babel/core": "^7.4.4",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-transform-modules-commonjs": "^7.4.4",
        "@babel/plugin-transform-react-jsx": "^7.3.0",
        "@babel/preset-env": "^7.4.4",
        "@babel/register": "^7.4.4",
        "babel-loader": "^8.0.6",
        "core-js": "^3.0.1",
        "preact-render-to-string": "^4.1.0",
        "prettier": "^1.17.1",
        "sass": "^1.20.1",
        "webpack": "^4.31.0",
        "webpack-cli": "^3.3.2"
    }
}
